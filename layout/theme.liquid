<!doctype html>
<head>
  <title>{{ page_title }}{% if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}</title>
  <link rel="canonical" href="{{ canonical_url }}" />

  <!-- META FIELDS -->
  <meta charset="utf-8" />
  {% if page_description %}<meta name="description" content="{{ page_description | escape }}" />{% endif %}
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  {% include 'open-graph-tags' %}
  {% include 'twitter-card' %}

  <!-- LOAD SHOPIFY APP JS -->
  {{ content_for_header }}

  <!-- LOAD CUSTOM CSS -->
  {{ 'style.css' | asset_url | stylesheet_tag }}

  <!-- LOAD CUSTOM JS AND DEPENDENCIES -->
  {{ '//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js' | script_tag }}
  {{ 'app.js' | asset_url | script_tag }}

  <!-- LOAD OTHER VITAL SHOPIFY ASSETS -->
  {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
  {% if template contains 'customers' %}{{ 'customer_area.js'  | shopify_asset_url | script_tag }}{% endif %}
  {{ 'option_selection.js' | shopify_asset_url | script_tag }}
  {{ 'social/social-icons.css' | global_asset_url | stylesheet_tag }}
  <script>jQuery('html').removeClass('no-js').addClass('js');</script>

</head>

<body id="{{ page_title | handle }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}" >
  <div class="test">

  </div>
  <div class="container">

    <header class="row">

      <div class="social-links half column left-aligned">
      {% include 'social-links' %}
      </div>

      <div class="half column right-aligned">

        <div class="cart-link">
          <a href="/cart"><img src="{{ 'cart.svg' | asset_url }}" /> {{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }} ({{ cart.total_price | money }})</a>
        </div>

        {% if shop.customer_accounts_enabled %}
        <div class="customer-links">
          {% if customer %}
            Logged in as <a href="/account">{{ customer.first_name }}</a> Â· {{ 'Log out' | customer_logout_link }}
          {% else %}
            {{ 'Log in' | customer_login_link }}
            {% if shop.customer_accounts_optional %}
            or {{ 'Create an account' | customer_register_link }}
            {% endif %}
          {% endif %}
        </div>
        {% endif %}

      </div>

      <div class="masthead full column clear centered" role="banner">
        {% if settings.use_logo %}
        <a id="logo" href="/">
          {{ 'logo.png' | asset_url | img_tag: shop.name }}
        </a>
        {% else %}
        <a id="site-title" href="/">
          {{ shop.name }}
        </a>
        {% endif %}
        {% if template == 'index' %}
        <h1 class="hidden">{{ shop.name }}</h1>
        {% endif %}
      </div>

      <div class="clear full column">
        {% include 'site-nav' %}
      </div>

    </header>

    <div id="main" role="main">
      {{ content_for_layout }}
    </div>

    <footer>

      {% if linklists.footer.links.size > 0 %}
      <p role="navigation">
      {% for link in linklists.footer.links %}
        <a href="{{ link.url }}" title="{{ link.title }}"{% if link.active %} class="active"{% endif %}>{{ link.title }}</a>
      {% endfor %}
      </p>
      {% endif %}

      {% unless shop.enabled_payment_types == empty %}
	  <div class="payment-types">
        {% for type in shop.enabled_payment_types %}
        <img width="40" src="{{ type | payment_type_img_url }}" />
        {% endfor %}
      </div>
      {% endunless %}

      <p role="contentinfo" class="small-print">Copyright &copy; {{ "now" | date: "%Y" }} {{ shop.name }}. {{ powered_by_link }}.</p>

    </footer>

    {% comment %}Shopify does not support Internet Explorer 6 nor 7. It does encourage themes to support IE8 until the end of 2014.{% endcomment %}
    <!--[if lt IE 8]>
    <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
    <![endif]-->

  </div><!-- end of #container -->

  {{ 'shop.js'  | asset_url | script_tag }}

</body>
</html>
