$sm-break: 768px;
$md-break: 991px;
$lg-break-down: 1199px;
$lg-break: 1200px;

$half-gutter-size: 12px;
$gutter-size: 24px;

$columns: '{{ settings.the_cols }}';



$black: #000000;
$white: #FFFFFF;


$base-font-size: 16px;
body {
  background-color: $white;
}

.cart-drawer {
  border-left: 1px black solid;
  height: 100vh;
  padding: 0 24px;
  position: fixed;
  right: 0;
  top: 0;
  width: 25%;
  z-index: 1;
  .pointer {
    cursor: pointer;
  }
}
