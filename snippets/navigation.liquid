<nav role="navigation" class="col-xs-12">
  <!-- MAIN NAVIGATION - MANAGED IN SHOPIFY DASHBOARD -->
  <ul class="nav">
    {% for link in linklists.main-menu.links %}
      <li class="{% if link.active%}active{% endif %}{% if forloop.first %} first{% elsif forloop.last %} last{% endif %}">
        <a href="{{ link.url }}">{{ link.title }}</a>
      </li>
    {% endfor %}
  </ul>
  <!-- ACCOUNT LOGIN/LOGOUT & CART LINK -->
  <div class="account-cart">
    <div class="cart-link">
      <a href="/cart">{{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }}</a>
    </div>
    <div class="customer-links">
      {% if customer %}
        <a href="/account">{{ customer.first_name }}</a> | {{ 'Log out' | customer_logout_link }}
      {% else %}
        {{ 'Log in' | customer_login_link }}
      {% endif %}
    </div>
  </div>
</nav>
