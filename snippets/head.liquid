<title>{{ page_title }}{% if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}</title>
<link rel="canonical" href="{{ canonical_url }}" />

<!-- META FIELDS -->
<meta charset="utf-8" />
{% if page_description %}<meta name="description" content="{{ page_description | escape }}" />{% endif %}
<meta name="viewport" content="width=device-width, initial-scale=1" />
{% include 'open-graph-tags' %}
{% include 'twitter-card' %}

<!-- LOAD CUSTOM CSS -->
{{ 'style.scss' | asset_url | stylesheet_tag }}

<!-- LOAD CUSTOM JS AND DEPENDENCIES -->
{% comment %}{{ '//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js' | script_tag }}{% endcomment %}
{{ 'app.js' | asset_url | script_tag }}

<!-- LOAD OTHER VITAL SHOPIFY ASSETS -->
{{ 'shopify_common.js' | shopify_asset_url | script_tag }}
{% if template contains 'customers' %}{{ 'customer_area.js'  | shopify_asset_url | script_tag }}{% endif %}
{{ 'option_selection.js' | shopify_asset_url | script_tag }}
{{ 'social/social-icons.css' | global_asset_url | stylesheet_tag }}
<script>jQuery('html').removeClass('no-js').addClass('js');</script>
